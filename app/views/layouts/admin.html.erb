<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body>
  <div style="display: flex; justify-content: flex-end;">
    <%= link_to 'Logout', admin_session_path(current_admin), data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure?'
    }, class: "btn"%>
  </div>
    <h1>Welcome to the Admin Panel</h1>
  <div class="admin-panel">
      <aside class="admin-sidebar">
        <h3 style="text-decoration: underline;">Directories</h3>
        <ul>
          <li><%= link_to 'Admin Users', admin_users_path %></li>
          <li><%= link_to 'Items', items_path %></li>
          <li><%= link_to 'Item Components', item_components_path %></li>
          <li><%= link_to 'Suppliers', suppliers_path %></li>
          <li><%= link_to 'Organizations', organizations_path %></li>
          <li><%= link_to 'Item Subscribers', item_subscribers_path %></li>
          <li><%= link_to 'Purchase Receipts', purchase_receipts_path %></li>
          <li><%= link_to 'Sale Receipts', sale_receipts_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>
      </aside>
      <main class="admin-content">
        <%= yield %>
      </main>
  </div>
</body>
</html>